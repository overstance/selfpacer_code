{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "react-hooks"
    ],
    "rules": {
        "no-console": "off",
        "react-hooks/rules-of-hooks": "error",
        "indent": [
            "error",
            2
        ],/* 
        "linebreak-style": [
            "error",
            // "unix",
            "windows"
        ], */
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "parser": "flow"
            }
        ]
    }
}

